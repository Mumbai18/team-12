<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="308dp"
        android:layout_height="241dp"
        android:layout_weight="0.55"
        app:srcCompat="@android:drawable/alert_light_frame"
        tools:layout_editor_absoluteY="6dp"
        tools:layout_editor_absoluteX="38dp" />

    <TextView
        android:id="@+id/tvModeOfTransportation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        android:text="Mode of Transportation"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="260dp" />

    <RadioButton
        android:id="@+id/rdPublicTransport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public Transport"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="296dp" />

    <RadioButton
        android:id="@+id/rdTwoWheeler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Two-wheeler"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="337dp" />

    <RadioButton
        android:id="@+id/rdFourWheeler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Four-wheeler"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="369dp" />

    <TextView
        android:id="@+id/tvETA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ETA"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="417dp" />

    <EditText
        android:id="@+id/etETA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="2:35Hrs"
        android:textSize="25dp"
        tools:layout_editor_absoluteY="408dp"
        tools:layout_editor_absoluteX="135dp" />

</android.support.constraint.ConstraintLayout>